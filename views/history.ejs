<% include partials/header %>

<div class="container-fluid my-1 py-3 z-depth-3">
<div class="row">
    <div class="col-xs-12 col-md-3">
        <ul class="list-group px-2 text-white">
            <a class="link-item" href="/profile"><li class="list-group-item list-group-item-action text-dark">My Profile</li></a>
            <a href="/history"><li class="list-group-item list-group-item-action text-dark">Orders History</li></a>
