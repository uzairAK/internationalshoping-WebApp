<% include partials/header %>


<div class="container my-1 py-3 ">
<div class="row">
    <div class="col">
        <div class="card z-depth-2" style="min-height: 80vh">
            <div class="card-header text-center">
                <div class="h4">Product Detail</div>
                <a class="btn btn-default btn-sm float-left" href="/history">&larr; Go Back</a>
<!--                <div class="p">You can define custom order which may not be in the list of products imported anywhere from US</div>-->
            </div>
            <div class="card-body">
<!--                <div class="justify-content-center red container">dfdfds</div>-->
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <p>Product name:</p> <input class="form-control" type="text" placeholder="" name="info[name]" value="<%= product.name %>" disabled><br>
                            <p>Quantity:</p> <input class="form-control" type="number" placeholder="" name="info[quantity]" value="<%= product.quantity %>" disabled><br>
                            <p>Price (in US Dollars):</p> <input class="form-control" type="number" placeholder="" name="info[price]" value="<%= product.price %>" disabled><br>
                            <p>Total Price (in US Dollars):</p> <input class="form-control" type="number" placeholder="" value="<%= product.price * product.quantity %>" disabled><br>

                        </div>
                        <div class="col-sm-12 col-md-6">
                            <p>Website Link:</p> <input class="form-control" type="text" placeholder="" name="info[link]" value="<%= product.link %>" disabled><br>
                            <p>Additional info:</p> 
                            <textarea rows="4" wrap="hard" class="form-control" maxlength="550" name="info[info]" disabled><%= product.info %></textarea><br>
                            <p>Status:</p> <input class="form-control" type="text" placeholder="" name="info[link]" value="<%= product.status %>" disabled><br>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
</div>
<% include partials/footer %>