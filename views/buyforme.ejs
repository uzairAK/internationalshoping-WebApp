<% include partials/header %>


<div class="container my-1 py-3 ">
<div class="row">
    <div class="col">
        <div class="card z-depth-2" style="min-height: 80vh">
            <div class="card-header text-center">
                <div class="h4">Custom Product Quotation Form</div>
                <div class="p">You can define custom order which may not be in the list of products imported anywhere from US</div>
            </div>
            <div class="card-body">
              <% if(hasErrors) {%>
                <div class="alert alert-danger text-center">
                   <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                   <% _.forEach(messages, function(error){ %>
                       <%= error %><br>
                   <% }) %>
                    
                </div>
            <% } %>
                <% if(hasSuccess) {%>
                <div class="alert alert-success text-center">
                   <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                   <% _.forEach(messagesSuccess, function(error){ %>
                       <%= error %><br>
                   <% }) %>
                    <a href="/history">View Orders History</a>
                </div>
            <% } %>
<!--                <div class="justify-content-center red container">dfdfds</div>-->
                <form action="/buyforme" method="post">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <p>Product name:</p> <input class="form-control" type="text" placeholder="" name="info[name]"><br>
                            <p>Quantity:</p> <input class="form-control" type="number" placeholder="" name="info[quantity]" value="1"><br>
                            <p>Price (in US Dollars):</p> <input class="form-control" type="number" placeholder="" name="info[price]" value="0"><br>

                        </div>
                        <div class="col-sm-12 col-md-6">
                            <p>Website Link:</p> <input class="form-control" type="text" placeholder="" name="info[link]"><br>
                            <p>Additional info:</p> 
<!--                            <input class="form-control" type="text" placeholder="" name="info[info]"><br>-->
                            <textarea rows="4" wrap="hard" class="form-control" maxlength="550" name="info[info]"></textarea>
                        </div>
                    </div>
                    <div class="action-buttons">
                        <input class="btn btn-default" type="submit" value="Send Order" st>
                    </div>
                </form>
                <div class="text-muted">Note: <br>1) The order may take some time for approval. <br>2) You may get a call from us for further process or queries. Make sure the number you entered in your profile is accurate. Otherwise the order may be cancelled</div>
            </div>
        </div>
    </div>
</div>
</div>
<% include partials/footer %>